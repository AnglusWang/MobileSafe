<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.angluswang.mobilesafe">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <!-- 手机定位所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <!-- 手机震动 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- 去电 -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!-- 电话记录 -->
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>
    <!--　快捷方式　-->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <!-- 进程管理 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.FlashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 应用程序 主页 -->
        <activity android:name=".activity.HomeActivity">
            <intent-filter>
                <action android:name="com.angluswang.flash.INSTALL_SHORTCUT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingActivity">
        </activity>
        <activity android:name=".activity.LostFindActivity">
        </activity>
        <activity android:name=".activity.Setup1Activity">
        </activity>
        <activity android:name=".activity.Setup2Activity">
        </activity>
        <activity android:name=".activity.Setup3Activity">
        </activity>
        <activity android:name=".activity.Setup4Activity">
        </activity>
        <activity android:name=".activity.ContactActivity">
        </activity>
        <activity android:name=".activity.AToolsActivity">
        </activity>
        <activity android:name=".activity.AddressActivity">
        </activity>
        <activity
            android:name=".activity.DragViewActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <activity
            android:name=".activity.RocketBgActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <activity android:name=".activity.CallSafeActivity"/>
        <!--应用程序管理-->
        <activity android:name=".activity.AppManagerActivity"/>
        <!-- 进程管理 -->
        <activity android:name=".activity.TaskManagerActivity"/>
        <!-- 任务管理器设置 -->
        <activity android:name=".activity.TaskManagerSettingActivity"/>
        <!-- 病毒查杀 -->
        <activity android:name=".activity.AntivirusActivity"/>
        <!-- 应用程序锁 -->
        <activity android:name=".activity.AppLockActivity"/>

        <receiver android:name=".receiver.BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.SmsReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <!-- 桌面小部件 -->
        <receiver android:name=".receiver.MyAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info"/>
        </receiver>
        <receiver android:name=".receiver.KillProcessAllReceiver">
            <intent-filter>
                <action android:name="com.angluswang.kill_process_all"/>
            </intent-filter>
        </receiver>

        <service android:name=".service.LocationService">
        </service>
        <service android:name=".service.AddressService">
        </service>
        <service android:name=".service.RocketService">
        </service>
        <service android:name=".service.CallSafeService">
        </service>
        <!-- 自动清理进程服务 -->
        <service android:name=".service.KillProcessService"/>
        <service android:name=".service.KillProcessWidgetService"/>

    </application>

</manifest>